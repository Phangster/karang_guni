<div class='text-center'>
<h1>Hello I am the seller</h1>

<%= form_for @message, :local => true do |f| %>
    <%= f.text_area :content, size: "90x20" %>
    <%= f.hidden_field :sender, :value => 'true' %>
    <%= f.hidden_field :buyer_id, :value => @buyer.id %>
    <%= f.hidden_field :seller_id, :value => @seller.id %>
    <br>

    <%= f.submit "Create" %>
<% end %>
</div>