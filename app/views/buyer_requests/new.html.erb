<div class="container">
  <h1 class="text-center">Bidding Price</h1>

  <%= form_for @buyer_request, url: create_buyer_request_path do |f| %>
    <%= f.hidden_field :buyer_id, value: current_buyer.id %>
    <%= f.hidden_field :request_id, value: @req_id %>

    <div class="row">
      <div class="col-md-6 ml-auto mr-auto">
        <%= f.label :price %>
        <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any, class: 'form-control', placeholder: 'Bid Amount' %>
      </div>
    </div>

    <br>

    <div align="center">
      <%= f.submit %>
    </div>

  <% end %>
</div>
