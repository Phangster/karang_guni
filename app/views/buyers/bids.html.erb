<div class="container">
  <h1 class="text-center">My Bids</h1>

  <table class="table table-striped">
    <tr>
      <th>Title of Bid</th>
      <th>Bid Price</th>
      <th>Status</th>
      <th>Accepted</th>
      <th>Message</th>
    </tr>

    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td>$<%= request.buyer_requests.find_by(buyer_id: current_buyer.id).price %></td>
        <td><%= request.status ? "Closed" : "Open" %></td>
        <td><%= request.buyer_requests.find_by(buyer_id: current_buyer.id).sold ? "Yes" : "No" %></td>
        <td><%= link_to 'New message', new_buyer_message_path(seller_id: request.seller.id), class: 'btn btn-success btn-md' %></td>
      </tr>
    <% end %>
  </table>
</div>
