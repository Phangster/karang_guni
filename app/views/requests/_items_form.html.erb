<div class="row">
  <div class="col-md-3 ml-auto">
    <label class="form-group">Name</label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'name of item' %>
  </div>

  <div class="col-md-3 mr-auto">
    <label class="form-group">Quantity</label>
    <%= f.text_field :qty, class: 'form-control', placeholder: 'quantity of item (e.g. 2kg/5pcs)' %>
  </div>
</div>

<br />

<div class="row">
  <div class="col-md-6 ml-auto mr-auto">
    <label class="form-group">Description</label>
    <%= f.text_field :description, class: 'form-control', placeholder: 'description of item' %>
  </div>
</div>

<br />
