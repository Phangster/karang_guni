<div class="container">
  <h2 class="text-center">Requests</h2>
  
  <%= form_tag("/requests", method: 'get') do %>
    <%= label_tag(:postal, 'Search Postal Code') %>
    <%= text_field_tag(:postal) %>
    <%= submit_tag("Search") %>
  <% end %>

  <table class="table table-striped">
    <tr>
      <th>Request</th>
      <th>Postal Code</th>
    </tr>

    <% @request.each do |r| %>
      <tr>
        <td><%= link_to r.title, request_path(r.id) %></td>
        <td><%= r.seller.address %></td>
      </tr>
    <% end %>
  </table>
</div>
