        <li class="nav-item">
          <%= link_to 'All Requests', requests_path, class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to 'Messages', show_buyer_message_path, class: "nav-link" %>
        </li>
      <% end %>

