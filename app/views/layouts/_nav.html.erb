            <%= current_buyer.name %>
          <% elsif current_seller %>
            <%= current_seller.name %>
          <% else %>
            Are you a Buyer?
          <% end %>
        </a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
