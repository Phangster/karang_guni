      <li class="nav-item">
        <%= link_to 'Seller Registration', new_seller_registration_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Buyer Registration', new_buyer_registration_path, class: "nav-link" %>
      </li>

