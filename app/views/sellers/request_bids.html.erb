<div class="container">
  <h1 class="text-center">Bids for <%= @request.title %></h1>

  <table class="table table-striped">
    <tr>
      <th>Price</th>
      <th>Buyer</th>
      <th>Message</th>
      <th>Accept</th>
    </tr>

    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.price %></td>
        <td><%= bid.buyer.name %></td>
        <td><%= link_to 'Message', new_seller_message_path(buyer_id: bid.buyer_id), class: 'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Accept', accept_bid_path(req_id: @request.id, br_id: bid.id), class: 'btn btn-xs btn-success' %></td>
      </tr>
    <% end %>
  </table>
</div>

<div align="center">
  <%= link_to 'Back', request_index_path, class: 'btn btn-md btn-danger' %>
</div>
